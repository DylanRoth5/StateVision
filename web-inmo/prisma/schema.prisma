generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model real_states {
  id                    Int      @id @default(autoincrement())
  title                 String
  description           String?
  price                 Int?
  type                  String?
  createdAt             DateTime @default(now()) @db.Timestamptz(6)
  updatedAt             DateTime
  bathrooms             Int?
  bedrooms              Int?
  covered_square_meters Int?
  details               String?
  location              String?
  state                 String?
  street                String?
  total_square_meters   Int?
  url                   String?
}

model users {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String   @unique
  role          String?
  profile_image String?
  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime
}
